<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:listPreferredItemHeight"
    android:background="@drawable/drawer_selector">

    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_arnold"
        android:layout_centerVertical="true"
        android:contentDescription="@string/navigation_drawer_icon_content_description"/>

    <TextView
        android:id="@+id/drawer_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drawer_item_icon"
        android:text="@string/app_name"
        android:textColor="@color/drawer_item_text"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingRight="20dp"/>

</RelativeLayout>