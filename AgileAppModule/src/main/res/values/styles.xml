<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="RepoNameStyle">
		<item name="android:textColor">@color/theme_white</item>
		<item name="android:textSize">@dimen/repo_name_textsize</item>
		<item name="android:shadowColor">@color/theme_dark_blue</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>
	<style name="RepoSHAStyle">
		<item name="android:textColor">@color/theme_white</item>
		<item name="android:textSize">@dimen/repo_sha_textsize</item>
		<item name="android:shadowColor">@color/theme_dark_blue</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>
	<style name="NavigationDrawerStyle">
		<!-- Per the design guidelines, navigation drawers should be between 240dp and 320dp:
 https://developer.android.com/design/patterns/navigation-drawer.html -->
		<item name="android:width">@dimen/navigation_drawer_width</item>
		<item name="android:background">@color/navigation_drawer_background</item>
	</style>
	<style name="NavigationDrawerItemStyle">
		<item name="android:textSize">@dimen/navigation_drawer_item_text_size</item>
		<item name="android:gravity">start</item>
		<item name="android:textColor">@color/navigation_drawer_item_text</item>
	</style>
	<style name="LoadingTextStyle">
		<item name="android:textColor">@color/theme_black</item>
		<item name="android:textSize">@dimen/loading_text_size</item>
		<item name="android:shadowColor">@color/theme_dark_blue</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="IndeterminateFancyProgressBarStyle" parent="SmoothProgressBar">
		<item name="spb_color">@color/theme_black</item>
		<item name="spb_progressiveStart_activated">true</item>
	</style>
</resources>